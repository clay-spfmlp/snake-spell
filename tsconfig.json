{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./packages/shared-types/src/*"],
      "@game-logic/*": ["./packages/game-logic/src/*"],
      "@ui/*": ["./packages/ui-components/src/*"]
    }
  },
  "include": [],
  "exclude": ["node_modules"]
} 